<Window x:Class="QuickCutsUI.controls.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        ShowInTaskbar="False"
        Topmost="True">
    <Window.Resources>
        <Style TargetType="{x:Type Border}" x:Key="SectionBorder">
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Background" Value="AliceBlue" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="LightGray" />
        </Style>
    </Window.Resources>
    
    <Border Style="{StaticResource SectionBorder}" Margin="10" Padding="5">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="QuickCuts" />
            <TextBlock Name="TxtVersion" />
            <TextBlock Margin="5" />
            <TextBlock Text="Author: Jared Cone (jared.cone@gmail.com)" />
        </StackPanel>
    </Border>
</Window>
